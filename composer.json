{
    "name": "jeffochoa/validator-factory",
    "description": "Standalone library to use Illuminate\\Validation package outside the Laravel framework.",
    "type": "library",
    "version": "1.0.1",
    "require": {
        "php": ">=8.0",
        "illuminate/filesystem": "^8.0|^9.0",
        "illuminate/translation": "^8.0|^9.0",
        "illuminate/validation": "^8.0|^9.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.1",
        "orchestra/testbench": "^6.21",
        "vimeo/psalm": "^4.10"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Jefferson Ochoa (Jeff)"
        }
    ],
    "autoload": {
        "psr-4": {
            "JeffOchoa\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JeffOchoa\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
        "psalm": "vendor/bin/psalm"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
